<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addinvoiceFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingBottom="65dp"
            >
            <TextView android:text = "Add Invoice"
                android:layout_width="match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/cust_heading"
                android:textSize = "35dp"
                android:layout_alignParentTop = "true"
                android:textAlignment="center"
                android:layout_centerHorizontal = "true" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            >
            <TextView
                android:text = "Customer ID"
                android:layout_width="wrap_content"
                android:layout_height = "30dp"
                android:id = "@+id/cust_name_label"
                android:textSize = "20dp"
                android:layout_alignParentTop = "true"
                android:paddingLeft="8dp"
                android:layout_centerHorizontal = "true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/cust_"
                android:layout_marginLeft="10dp"

                android:inputType="text"
                >

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"

            >
            <TextView
                android:text = "Invoice Date"
                android:layout_width="150dp"
                android:layout_height = "30dp"
                android:id = "@+id/cust_phone_label"
                android:textSize = "20dp"
                android:layout_alignParentTop = "true"
                android:paddingLeft="8dp"
                android:layout_centerHorizontal = "true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/invoice_date"
                android:layout_marginLeft="10dp"
                android:hint="dd/mm/yyyy"
                android:inputType="datetime"
                >

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"

            >
            <TextView
                android:text = "Payment Status"
                android:layout_width="150dp"
                android:layout_height = "30dp"
                android:textSize = "20dp"
                android:layout_alignParentTop = "true"
                android:paddingLeft="8dp"
                android:layout_centerHorizontal = "true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/payment_status"
                android:layout_marginLeft="10dp"
                android:hint=""
                android:inputType="text"
                >

            </EditText>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/LoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Add Invoice" />


            <Button
                android:id="@+id/SignupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Reset" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>